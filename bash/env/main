export GOPATH=$HOME/gocode

# Create normal directories if they don't exist
[[ ! -d "$HOME/Projects" ]] && mkdir "$HOME/Projects"
[[ ! -d "$HOME/Developer" ]] && mkdir "$HOME/Developer"
[[ ! -d "$HOME/Developer/bin" ]] && mkdir "$HOME/Developer/bin"
[[ ! -d "$GOPATH" ]] && mkdir "$GOPATH"


export PATH=$PATH:$HOME/Developer/bin:$HOME/.dotfiles/bin:$GOPATH/bin

export CDPATH=.:$HOME:$HOME/Projects
