#!/bin/sh
#
# Set your retina display to scaled mode at the highest res

osascript <<- EOF
  tell application "System Preferences"
    activate
    set current pane to pane "com.apple.preference.displays"
  end tell
  tell application "System Events"
    tell process "System Preferences"
      click radio button "Display" of tab group 1 of window "Color LCD"
      click radio button "Scaled" of tab group 1 of window "Color LCD"
      click radio button 4 of radio group 1 of group 1 of tab group 1 of window "Color LCD"
    end tell
  end tell
  tell application "System Preferences"
    quit
  end tell
EOF 
