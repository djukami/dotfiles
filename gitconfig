[color]
  ui = true

[alias]
  st = status --short --branch
  cm = commit -m
  br = branch
  co = checkout
  cp = cherry-pick
  df = diff
  dc = diff --cached
  dt = difftool
  ls = ls-files
  ign = ls-files -o -i --exclude-standard
  pr = pull --rebase
  lg = log --decorate --pretty=oneline
  lop = log -p
  los = log --stat
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  log = log --decorate

[core]
  autocrlf = input

[push]
  default = upstream
